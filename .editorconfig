# http://editorconfig.org

root = true

[*]
# Change these settings to your own preference 缩进类型。可选值space space
indent_style = space
# 缩进数量。可选值 2 4
indent_size = 2

# We recommend you to keep these unchanged 换行符格式。说明见Wiki：换行。可选值crlf cr if
end_of_line = lf
# 文件编码。可选值latin1  utf-8。一般用这个。 utf-16be  utf-16le
charset = utf-8
# 是否删除行尾的空格。可选值
trim_trailing_whitespace = true
# 是否在文件的最后插入一个空行。可选值
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
